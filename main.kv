#: import DatePicker datepicker.DatePicker

<RootWidget>:
    TabbedPanel:
        do_default_tab: False
        
        TabbedPanelItem:
            text: 'Geral'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint: 1,0.11
                    Button:
                        id: start_stop_btn
                        text: "Iniciar/parar thread"
                        on_press: app.start_stop()
                    Button:
                        id: clear_log
                        text: "Limpar log"
                        on_press: self.parent.parent.children[0].text = ''
                TextInput:
                    id: log_input
                    #readonly: 'false'
                    size_hint: 1, 1
                        
        TabbedPanelItem:
            text: 'Configuração'
            BoxLayout:
            
            GridLayout:
                cols: 2
                Label:
                    text: "Usuário:"
                TextInput:
                    id: input_user
                    text: app.load_config('user')
                    on_text: app.write_config('user', self.text)
                    multiline: False
                Label:
                    text: "Senha:"
                TextInput:
                    id: input_password
                    text: app.load_config('password')
                    on_text: app.write_config('password', self.text)
                    multiline: False
                    password: True
                Label:
                    text: "Início do semestre:"
                DatePicker:
                    id: input_semester_start
                    initial: app.load_config('semester_start')
                    on_text: app.write_config('semester_start', self.text)
                    multiline: False
                Label:
                    text: "Fim do semestre:"
                DatePicker:
                    id: input_semester_end
                    initial: app.load_config('semester_end')
                    on_text: app.write_config('semester_end', self.text)
                    multiline: False
                Label:
                    text: "Lista de feriados:"
                TextInput:
                    id: input_holidays
                    text: app.load_config('holidays')
                    on_text: app.write_config('holidays', self.text)
                    multiline: True